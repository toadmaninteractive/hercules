<UserControl x:Class="Hercules.Scripting.View.TablePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hercules.Scripting.View" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <telerik:RadGridView
            ClipboardCopyMode="Cells"
            ClipboardPasteMode="Cells,AllSelectedCells,OverwriteWithEmptyValues"
            Name="DataGrid"
            SelectionMode="Extended"
            SelectionUnit="Mixed"
            AlternationCount="2"
            RowIndicatorVisibility="Collapsed"
            ItemsSource="{Binding Path=Table.Rows}">
    </telerik:RadGridView>
</UserControl>
